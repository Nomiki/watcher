{
    "name": "watcher",
    "version": "1.0.0",
    "description": "Watching changes and rebuilding stuff",
    "main": "./lib/index.js",
    "bin": {
        "watcher": "./lib/index.js"
    },
    "scripts": {
        "start": "nodemon --watch 'src/**/*.ts' --exec ts-node src/index.ts",
        "create": "npm run build && npm run test",
        "build": "tsc -p .",
        "local": "sudo npm i -g && watcher",
        "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Nomiki/watcher.git"
    },
    "author": "Nomiki",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Nomiki/watcher/issues"
    },
    "homepage": "https://github.com/Nomiki/watcher#readme",
    "devDependencies": {
        "@types/chokidar": "^2.1.3",
        "@types/glob": "^7.1.4",
        "@types/node": "^16.4.10",
        "@types/yargs": "^17.0.2",
        "nodemon": "^2.0.12",
        "ts-node": "^10.1.0",
        "typescript": "^4.3.5"
    },
    "dependencies": {
        "chokidar": "^3.5.2",
        "glob": "^7.1.7",
        "yargs": "^17.0.1"
    }
}
